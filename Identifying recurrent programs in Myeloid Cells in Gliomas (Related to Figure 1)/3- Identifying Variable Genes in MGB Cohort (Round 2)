library(dplyr)
library(Seurat)
options(bitmapType='cairo')
options(future.globals.maxSize = 8000 * 1024^2)

########## Removed Additional Myeloid Cells as discussed in step 2 ############

Myeloid_Cells <- scan("HQ_Myeloid_Round2.txt", what="")

######## Tumors.combined is the Seurat objected generated for all cells ###########

Myeloid <- subset(x = Tumors.combined, cells = Myeloid_Cells)

Myeloid.data <- GetAssayData(object = Myeloid, slot="counts")


SeqWell2 <- SeqWell[,colnames(SeqWell) %in% Myeloid]



All <- CreateSeuratObject(counts = SeqWell2, project = "SeqWell", min.cells = 3, min.features = 200)
All[["percent.mt"]] <- PercentageFeatureSet(All, pattern = "^MT.")


All <- NormalizeData(All)

All <- FindVariableFeatures(All, selection.method="vst", nfeatures = 2000)

Var <- HVFInfo(object = All, selection.method="vst", assay = "RNA")

write.table(Var, file="SeqWell_Myeloid_Full_Gene_List_Variable_Score.txt", sep="\t", quote=FALSE, col.names=NA)


######### Identify variable object from Var (min 0.001 mean expression then top 2000 variance standardized) #########


Variable_SeqWell <- scan("SeqWell_Variable.txt", what="")

SeqWell3 <- SeqWell[rownames(SeqWell) %in% Variable_SeqWell, colnames(SeqWell) %in% Myeloid]

write.table(t(SeqWell3), file="MGB_Myeloid_Matrix_Filtered_For_NMF_Round2.txt", sep="\t", quote=FALSE, col.names=NA)




